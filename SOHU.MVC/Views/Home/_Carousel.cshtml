@using SOHU.Data.DataTransferObject
@using SOHU.Data.Models
@using SOHU.Data.Repositories
@using SOHU.Data.Helpers
@model List<Config>
@{
    if (Model != null)
    {
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var item in Model)
                {
                    if (Model.IndexOf(item).Equals(0))
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@Model.IndexOf(item)" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@Model.IndexOf(item)"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    if (Model.IndexOf(item).Equals(0))
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@item.CodenameSub" alt="@item.Note">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@item.CodenameSub" alt="@item.Note">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
}