@using SOHU.Data.DataTransferObject
@using SOHU.Data.Models
@using SOHU.Data.Respositories
@using SOHU.Data.Helpers
@model IEnumerable<Product>
<link rel="stylesheet" href="~/css/theme-shop.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<div>
    <div class="row">
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                <div class="col-md-3">
                    @{
                        var url = item.MetaTitle + "-" + item.Id + ".html";
                    }
                    <div class="card card-body h-100">
                        <a href="@url">
                            <img class="card-img-top" src="@item.Image" alt="@item.Title">
                        </a>
                        <div class="card-body">
                            <a href="@url"><h5 class="card-title">@item.Title</h5></a>
                            <p class="card-text text-primary h5">@item.Price?.ToString("N2")</p>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <a asp-action="Create" asp-controller="Cart" class="col-6 w-90 p-1 btn btn-primary">Add to cart</a>
                                <a href="@url" class="col-6 w-90 btn btn-success p-1">View more</a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            }
        }
    </div>
    <div class="row py-2">
        <div class="col">
            <ul class="pagination float-right">
                <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-left"></i></a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <a class="page-link" href="#"><i class="fas fa-angle-right"></i></a>
            </ul>
        </div>
    </div>
</div>
